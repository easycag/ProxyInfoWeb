@model ProxyInfoWeb.Models.SearchModel

@{
    ViewBag.Title = "Index";
}
<script src="~/Content/js/angular.js"></script>
@*<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js"></script>*@
<script src="~/Models/app.js"></script>
<script src="~/Content/js/IPInfoAngularController.js"></script>
<script src="~/Content/js/AngularInfo.js"></script>
<link href="~/Content/css/SearchStyle.css" rel="stylesheet" />
 <meta charset="utf-8">
    <script src="~/Content/js/jquery.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />

 <style type="text/css">
.bgimg {
    background-image: url('../Content/Images/backgroundDefault.jpg');
}
body, html {
    height: 100%;
}

.bg {
    /* The image used */
    background-image: url("../Content/Images/backgroundDefault.jpg");

    /* Full height */
    height: 100%; 

    /* Center and scale the image nicely */
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
}
</style>
<div class="container-fluid">
    <div class="row bg">
        <div class="col-lg-1"></div>
        <div class="col-lg-10">
            <br />
            @using (Html.BeginForm("FetchDetail", "Home", FormMethod.Post, new { @class="form-horizontal"}))
            {   
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div ng-app="myapp" >     
                    <div class="col-lg-12" style="border:2px solid black; border-radius:25px">
                        <br />
                        <div class="col-lg-12">
                            <div class="col-lg-4">
                                @Html.LabelFor(m => m.sProxy, "Proxy : ", new { @class = "control-label col-lg-4 text-primary" })
                                <div class="col-lg-8">
                                    @Html.TextBoxFor(m => m.sProxy, new { @class = "form-control  input-sm", @ng_Model = "searchText.Proxy" })
                                </div>                                
                            </div>
                            <div class="col-lg-4">
                                @Html.LabelFor(m => m.sStatus, "Status : ", new { @class = "control-label col-lg-4 text-primary" }) 
                                <div class="col-lg-8">
                                    @Html.DropDownListFor(m => m.sStatus, new SelectList(Model.sStatusVal), new {  @class = "form-control  input-sm",@ng_Model = "searchText.IPv4_Category" })
                                </div>
                            </div>
                            <div class="col-lg-4">
                                @Html.LabelFor(m => m.sSpeed, "Speed : ", new { @class = "control-label col-lg-4 text-primary" })  
                                <div class="col-lg-8">
                                    @Html.DropDownListFor(m => m.sSpeed, new SelectList(Model.sSpeedVal), new { @class = "form-control  input-sm", @ng_Model = "searchText.IPv4_Speed" })
                                </div>
                            </div>
                        </div>
                        <br />
                        <br />
                        <div class="col-lg-12">
                            <div class="col-lg-4">
                                @Html.LabelFor(m => m.sCity, "City : ", new { @class = "control-label col-lg-4 text-primary" })  
                                <div class="col-lg-8">
                                    @Html.DropDownListFor(m => m.sCity, new SelectList(Model.sCityVal), new {  @class = "form-control input-sm",@ng_Model = "searchText.IPv4_City" })
                                </div>
                            </div>
                            <div class="col-lg-4">
                                @Html.LabelFor(m => m.sState, "State : ", new { @class = "control-label col-lg-4 text-primary" }) 
                                <div class="col-lg-8">
                                    @Html.DropDownListFor(m => m.sState, new SelectList(Model.sStateVal), new { @class = "form-control input-sm", @ng_Model = "searchText.IPv4_State" })
                                </div>
                            </div>
                            <div class="col-lg-4">
                                @Html.LabelFor(m => m.sCountry, "Country : ", new { @class = "control-label col-lg-4 text-primary" })  
                                <div class="col-lg-8">
                                    @Html.DropDownListFor(m => m.sCountry, new SelectList(Model.sCountryVal), new {  @class = "form-control input-sm",@ng_Model = "searchText.IPv4_Country" })
                                </div>
                            </div>
                        </div>
                        <br />
                        <br />
                </div>

                <div style="border:2px solid black;border-radius: 25px;" class="col-lg-12">
                    <div ng-controller="IPInfoCtrl">  
                        <table class="table table-striped table-bordered table-hover table-checkable datatable">  
                            <thead class="grid-top-panel">  
                                <tr class="success">  
                                    <th>IPv4</th>  
                                    <th>Proxy</th>  
                                    <th>Port</th>  
                                    <th>Address</th>  
                                    <th>Status</th>  
                                    <th>Speed</th>  
                                    <th>City</th>  
                                    <th>State</th>  
                                    <th>Country</th>  
                                </tr>  
                            </thead>  
                            <tbody>  
                                <tr ng-repeat="dataModel in IPInfoData | filter:searchText">  
                                    <td>{{dataModel.IPv4}}</td>  
                                    <td>{{dataModel.Proxy}}</td>  
                                    <td>{{dataModel.Proxy_Port}}</td>  
                                    <td>{{dataModel.IPv4_Address}}</td>  
                                    <td>{{dataModel.IPv4_Category}}</td>  
                                    <td>{{dataModel.IPv4_Speed}}</td>  
                                    <td>{{dataModel.IPv4_City}}</td>  
                                    <td>{{dataModel.IPv4_State}}</td>  
                                    <td>{{dataModel.IPv4_Country}}</td>  
                    
                                </tr>  
                            </tbody>  
                        </table>  
                    </div>  
                </div>
            </div> 
            }
        </div>
        <div class="col-lg-1"></div>
    </div>
</div>